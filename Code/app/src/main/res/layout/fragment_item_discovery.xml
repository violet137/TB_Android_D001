<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvdiscoveryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="#cuocduakithu"
        >
    </TextView>

    <TextView
        android:id="@+id/tvdiscoveryHashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hashtag HOT"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvdiscoveryTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tvdiscoveryTitle"
        app:layout_constraintRight_toRightOf="parent"
        ></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerViewDiscoveryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvdiscoveryHashtag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>